<div class="column">
	<nav class="panel">
		<p class="panel-heading">All Writers</p>

    <% @articles.map(&:user).uniq.each do | article |%>
	<div class="panel-block">
		<article class="media">
			<div class="media-left">
				<figure class="image is-32x32">
					<img src="https://bulma.io/images/placeholders/64x64.png">
				</figure>
			</div>
			<div class="media-content">
				<div class="content">
					<p>
						<strong><%= article.name %></strong><br/>
						<small><%= article.username %></small><br/>
					</p>
				</div>
			</div>
		</article>
	</div>
	<% end %>
</nav>
</div>


	